    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) test environment processor",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/test_environmentprocessor",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/resources",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]           
